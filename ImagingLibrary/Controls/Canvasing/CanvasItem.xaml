<UserControl x:Class="ImagingLibrary.Controls.Canvasing.CanvasItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImagingLibrary.Controls.Canvasing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Border Name="TitleBorder" Visibility="Collapsed" Margin="0, -20, 0, 0" BorderThickness="2, 0, 0, 1" BorderBrush="LightCyan">
            <TextBlock Text="OptionalTitle" x:Name="TheTitle" Foreground="Cyan"/>
        </Border>
        <Rectangle x:Name="TheRectangle"/>
    </StackPanel>
</UserControl>

    