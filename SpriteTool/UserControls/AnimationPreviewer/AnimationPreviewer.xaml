<UserControl x:Class="SpriteTool.AnimationPreviewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpriteTool"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{StaticResource Background3}" BorderBrush="{StaticResource Background4}" BorderThickness="1">
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Stretch">
                <TextBlock Text="Timeline" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Margin="2" HorizontalAlignment="Center">
                    <Button Name="Btn_Slow" Content="Slower" Click="Btn_Slow_Click"/>
                    <Button Name="Btn_Reverse" Content="Reverse" Click="Btn_Reverse_Click"/>
                    <Button Name="Btn_Play" Content="Play" Click="Btn_Play_Click"/>
                    <Button Name="Btn_Pause" Content="Pause" Click="Btn_Pause_Click"/>
                    <Button Name="Btn_Faster" Content="Faster" Click="Btn_Faster_Click"/>
                </StackPanel>
            </StackPanel>
            <Image Name="I_FramePreview" Width="200" Height="200" />
        </DockPanel>
    </Border>
</UserControl>
